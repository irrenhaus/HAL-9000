#ifndef GUI_H
#define GUI_H

#include "stm32f10x.h"

typedef struct MenuDef;

typedef enum {
	ICON_MENU = 1,
	BUTTON_MENU = 2
} MenuTypeDef;

typedef struct {
	unsigned char  *buttonTitle;
	uint8_t			actionCommand;
	unsigned char  *buttonImage;
	MenuDef		   *subMenu;

} MenuButtonDef;

typedef struct {
	MenuTypeDef		menuType;
	unsigned char	menuTitle[16];
	MenuButtonDef	menuButtons[16];
	uint8_t			hotButton;
} MenuDef;

void drawMenu(MenuDef *);

#endif /* GUI_H */
